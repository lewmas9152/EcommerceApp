<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/nav_bar_color"
    android:padding="8dp"
    android:elevation="4dp">

    <ImageView
        android:id="@+id/bottom_home_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_home"
        android:contentDescription="Home"
        android:layout_gravity="center_vertical"
        android:padding="4dp"
        app:tint="@color/icon_tint" />

    <ImageView
        android:id="@+id/categories_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/categories"
        android:contentDescription="Categories"
        android:layout_gravity="center_vertical"
        android:padding="4dp"
        app:tint="@color/icon_tint" />

    <ImageView
        android:id="@+id/orders_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/orders"
        android:contentDescription="Orders"
        android:layout_gravity="center_vertical"
        android:padding="4dp"
        app:tint="@color/icon_tint" />

    <ImageView
        android:id="@+id/account_bottom_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/account"
        android:contentDescription="Account"
        android:layout_gravity="center_vertical"
        android:padding="4dp"
        app:tint="@color/icon_tint" />
</LinearLayout>
